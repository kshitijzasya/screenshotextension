{
  "short_name": "Screenshot",
  "name": "Extension to take screenshot with project tracking update",
  "icons": {
      "16": "logo512.png",
      "32": "logo512.png",
      "48": "logo512.png",
      "128": "logo512.png" 
  },
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "desktopCapture",
    "downloads",
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo512.png",
      "32": "logo512.png",
      "48": "logo512.png",
      "128": "logo512.png" 
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
